SELECT NUMRUN_EMP || '-' || DVRUN_EMP AS "RUT EMPLEADO",
       PNOMBRE_EMP || ' ' || SNOMBRE_EMP || ' ' || APPATERNO_EMP || ' ' || APMATERNO_EMP AS "NOMBRE EMPLEADO",
       SUELDO_BASE,
       CAST(FLOOR(SUELDO_BASE / 100000)as INT ) AS "PORCENTAJE REAJUSTE",
       ROUND((SUELDO_BASE )* FLOOR(SUELDO_BASE / 100000)/100 ) as "SUELDO REAJUSTADO" 
FROM EMPLEADO
ORDER BY "PORCENTAJE REAJUSTE"DESC;





